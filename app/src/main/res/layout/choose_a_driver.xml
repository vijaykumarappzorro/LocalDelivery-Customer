<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_icon_driver_pic"
                app:civ_border_color="#FF000000"/>
        <TextView
            android:id="@+id/drivername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/profile_image"
            android:text="DRIVER 1"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="RS :20"
                android:layout_marginRight="30dp"/>
            <View
                android:id="@id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/drivername"
                android:background="@android:color/darker_gray"
                android:layout_toRightOf="@id/profile_image"/>
            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="10dp"
                    style="@style/Base.TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 NOV  2016"
                android:layout_toRightOf="@+id/date"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                style="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/date"
                android:layout_marginTop="10dp"
                style="@style/Base.TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/txttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 minute"
                android:layout_toRightOf="@+id/time"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/date"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                style="@style/Base.TextAppearance.AppCompat.Small"/>
            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginTop="15dp"
                style="?android:attr/ratingBarStyleSmall"

                android:layout_toRightOf="@+id/profile_image"/>
            <TextView
                android:id="@+id/txtratecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10)"
                android:textColor="@android:color/black"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_below="@+id/txttime"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ratingBar1"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ratingBar1"

        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/btnapprove"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="APPROVE"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_shape"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ratingBar1"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        />

</LinearLayout>
