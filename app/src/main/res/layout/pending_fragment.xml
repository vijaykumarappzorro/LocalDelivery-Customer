<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/statusongoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="10dp"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/productid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CH747474HH85"
                    android:layout_alignParentLeft="true"
                    style="@style/Base.TextAppearance.AppCompat.Small" />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/productdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productid"
                    android:layout_marginTop="5dp"
                    android:text=" 3 Lounge Chair"
                    android:textAlignment="center"
                    android:layout_alignParentLeft="true"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/statusReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productid"
                    android:layout_marginTop="5dp"
                    android:text="Ongoing"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/holo_orange_dark"/>
                <ImageView
                    android:id="@+id/scrollimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productdescription"
                    android:src="@mipmap/down"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/driverindicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productdescription"
                    android:src="@mipmap/driverindication"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="10dp">
                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDERED ON"
                    android:layout_alignParentLeft="true"
                    style="@style/Base.TextAppearance.AppCompat.Small" />
                <TextView
                    android:id="@+id/txtpaymentshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT"
                    android:layout_alignParentRight="true"
                    style="@style/Base.TextAppearance.AppCompat.Small" />
                <TextView
                    android:id="@+id/txtorderdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 OCT 2016 ,5:00 PM"
                    android:layout_below="@id/order"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentLeft="true"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/txtcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASH : RS 20"
                    android:layout_below="@id/order"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/pickaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtcash"
                    android:layout_marginTop="10dp"
                    android:text="PICKUP ADDRESS"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtcash"
                    android:layout_marginTop="10dp"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="DELIVERY ADDRESS"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:id="@+id/txtpick_address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pickaddress"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:text="khdddsbcjsjc"/>
                <TextView
                    android:id="@+id/txtdeliver_address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pickaddress"
                    android:text="mksjccjdcjdcdcnc"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>