<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_free_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appzaorro.myapplication.view.FreeRide">
    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar1"
        android:orientation="vertical"
        android:padding="30dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_icon_celebrations"/>
        <TextView
            android:id="@+id/txtfreeride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Invites your friends to  try Local Delivery and   get 50Rs% off on each of your next two rides "/>

        <Button
            android:id="@+id/btninvite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="INVITES FRIENDS"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_shape"/>


    </LinearLayout>

</RelativeLayout>
