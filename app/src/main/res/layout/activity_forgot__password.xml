<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot__password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".view.login.Forgot_Password">
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/slicing"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtprotocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@+id/imageview"
        android:text=" Enter the email address you register with and we will send you a link to rest your password " />
    <EditText
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:maxLines="1"
        android:layout_below="@+id/txtprotocol"
        android:hint="Enter email" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_shape"
        android:text="SEND PASSWORD RESET LINK"
        android:textColor="@android:color/white"
        android:layout_below="@+id/edtemail"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
